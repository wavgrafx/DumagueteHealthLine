<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:id="@+id/viewqueue_bar"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:elevation="2dp"
        android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/date_hider"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:text="Time of Day"
                android:textStyle="bold"
                android:textSize="19sp"
                android:id="@+id/viewqueue_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>



    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="5"
            android:background="@color/colorDHL"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content">




            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:text="Patient Name:     "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:text="Full Name of Patient"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:id="@+id/viewqueue_patientname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:text="Sex:     "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:text="Full Name of Patient"
                        android:textStyle="bold"
                        android:id="@+id/viewqueue_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:text="Birthday:     "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:text="Full Name of Patient"
                        android:textStyle="bold"
                        android:id="@+id/viewqueue_bday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:text="Booked by:     "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:text="Full Name of Patient"
                        android:textStyle="bold"
                        android:id="@+id/viewqueue_host"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="Service Status:     "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:text="PENDING"
                        android:id="@+id/viewqueue_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>



        </LinearLayout>

        <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="match_parent">
            <TextView
                    android:text="DONE"
                    android:id="@+id/viewqueue_done"
                    android:textStyle="bold"
                    android:layout_margin="3dp"
                    android:elevation="2dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:background="@drawable/bg_button_donequeue"
                    android:layout_height="wrap_content"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>