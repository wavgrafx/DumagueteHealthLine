<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:id="@+id/giveblood_box"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content">
    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:elevation="3dp"
                android:background="@drawable/giveblood_background"
                android:orientation="vertical"
                android:layout_height="wrap_content">



            <TextView
                    android:text="Looking for blood type: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                <ImageView
                        android:src="@drawable/blood"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>

                <TextView
                        android:textAlignment="center"
                        android:textSize="26dp"
                        android:id="@+id/askblood_bloodtype"
                        android:text="O+"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                    android:id="@+id/askblood_message"
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:textSize="17sp"
                    android:text="Messages will be displayed here."
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:text="If you want to help, please contact:"
                    android:textStyle="italic"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:text="+639123456789"
                    android:id="@+id/askblood_mobilenumber"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>



        </LinearLayout>
        <TextView
                android:text="Date and Time Sent"
                android:id="@+id/askblood_datetime"
                android:textAlignment="textEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>