<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gradient_theme"
        tools:context=".ViewClinic">
    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginRight="5dp"
                android:background="@drawable/theme_basket_light"
                android:elevation="3dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_height="match_parent">
            <LinearLayout
                    android:orientation="vertical"
                    android:gravity="bottom"
                    android:background="@drawable/cover"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                <TextView
                        android:text="Medical Practice"
                        android:textSize="19sp"
                        android:id="@+id/view_medPractice"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorDHL"
                        android:background="@drawable/bg_button_rightattached"
                        android:layout_marginBottom="10dp"
                        android:layout_width="wrap_content"
                        android:layout_gravity="right"
                        android:layout_height="wrap_content"/>


                <ImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/doctors_avatars"
                        android:id="@+id/view_profileAvatar"
                        android:layout_margin="10dp"
                        android:elevation="5dp"
                        android:layout_height="80dp"/>
                <TextView
                        android:text="Name"
                        android:textSize="20sp"
                        android:layout_margin="2dp"
                        android:id="@+id/view_fullName"
                        android:padding="5dp"
                        android:layout_gravity="bottom"
                        android:textStyle="bold"
                        android:background="#20000000"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="Tel: "
                            android:textSize="17sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:text="(000) 000 00000"
                            android:id="@+id/view_Contact"
                            android:textSize="17sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                </LinearLayout>



                <TextView
                        android:text="Certificates and Awards Section"
                        android:id="@+id/view_Cert"
                        android:textSize="17sp"
                        android:textAlignment="center"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>



                <TextView
                        android:text="Address Line Here"
                        android:textSize="15sp"
                        android:id="@+id/view_Address"
                        android:textStyle="italic"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <ImageView
                        android:src="@drawable/locator"
                        android:id="@+id/view_location"
                        android:paddingLeft="15dp"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="30dp"
                        android:layout_height="40dp"/>

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                    <RadioButton
                            android:text="Availability (Clinic is close in grayed out days)"
                            android:textSize="15sp"
                            android:checked="true"
                            android:textStyle="italic"
                            android:layout_marginRight="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#70ffffff"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:paddingTop="5dp"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_marginBottom="5dp"
                            android:layout_height="wrap_content">
                        <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="DAYS"
                                android:background="@drawable/minibox"
                                android:textAlignment="center"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:text="OPEN"
                                android:background="@drawable/minibox"
                                android:gravity="center"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:text="CLOSE"
                                android:background="@drawable/minibox"
                                android:gravity="center"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"/>


                    </LinearLayout>


                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_marginBottom="5dp"
                            android:layout_height="wrap_content">
                        <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="MON"
                                android:textColor="@color/colorWhite"
                                android:id="@+id/view_availMON"
                                android:background="@drawable/minibox_borderless"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:id="@+id/monopentime"
                                android:background="@drawable/minibox_borderless"
                                android:gravity="center"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:background="@drawable/minibox_borderless"
                                android:gravity="center"
                                android:id="@+id/monclosetime"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"/>


                    </LinearLayout>

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_marginBottom="5dp"
                            android:layout_height="wrap_content">
                        <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="TUE"
                                android:textColor="@color/colorWhite"
                                android:id="@+id/view_availTUE"
                                android:background="@drawable/minibox_borderless"
                                android:textStyle="bold"
                                android:textSize="13sp"
                                android:textAlignment="center"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:id="@+id/tueopentime"
                                android:background="@drawable/minibox_borderless"
                                android:gravity="center"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:background="@drawable/minibox_borderless"
                                android:gravity="center"
                                android:id="@+id/tueclosetime"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"/>


                    </LinearLayout>

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_marginBottom="5dp"
                            android:layout_height="wrap_content">

                        <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="WED"
                                android:textColor="@color/colorWhite"
                                android:id="@+id/view_availWED"
                                android:background="@drawable/minibox_borderless"
                                android:textStyle="bold"
                                android:textSize="13sp"
                                android:textAlignment="center"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:id="@+id/wedopentime"
                                android:background="@drawable/minibox_borderless"
                                android:gravity="center"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:background="@drawable/minibox_borderless"
                                android:gravity="center"
                                android:id="@+id/wedclosetime"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"/>


                    </LinearLayout>

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_marginBottom="5dp"
                            android:layout_height="wrap_content">

                        <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="THU"
                                android:textColor="@color/colorWhite"
                                android:id="@+id/view_availTHU"
                                android:background="@drawable/minibox_borderless"
                                android:textStyle="bold"
                                android:textSize="13sp"
                                android:textAlignment="center"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:id="@+id/thuopentime"
                                android:background="@drawable/minibox_borderless"
                                android:gravity="center"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:background="@drawable/minibox_borderless"
                                android:gravity="center"
                                android:id="@+id/thuclosetime"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"/>


                    </LinearLayout>

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_marginBottom="5dp"
                            android:layout_height="wrap_content">

                        <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="FRI"
                                android:textColor="@color/colorWhite"
                                android:id="@+id/view_availFRI"
                                android:background="@drawable/minibox_borderless"
                                android:textStyle="bold"
                                android:textSize="13sp"
                                android:textAlignment="center"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:id="@+id/friopentime"
                                android:background="@drawable/minibox_borderless"
                                android:gravity="center"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:background="@drawable/minibox_borderless"
                                android:gravity="center"
                                android:id="@+id/friclosetime"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"/>


                    </LinearLayout>

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_marginBottom="5dp"
                            android:layout_height="wrap_content">

                        <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="SAT"
                                android:textColor="@color/colorWhite"
                                android:id="@+id/view_availSAT"
                                android:background="@drawable/minibox_borderless"
                                android:textStyle="bold"
                                android:textSize="13sp"
                                android:textAlignment="center"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:id="@+id/satopentime"
                                android:background="@drawable/minibox_borderless"
                                android:gravity="center"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:background="@drawable/minibox_borderless"
                                android:gravity="center"
                                android:id="@+id/satclosetime"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"/>


                    </LinearLayout>

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="SUN"
                                android:textColor="@color/colorWhite"
                                android:id="@+id/view_availSUN"
                                android:background="@drawable/minibox_borderless"
                                android:textStyle="bold"
                                android:textSize="13sp"
                                android:textAlignment="center"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:id="@+id/sunopentime"
                                android:background="@drawable/minibox_borderless"
                                android:gravity="center"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:background="@drawable/minibox_borderless"
                                android:gravity="center"
                                android:id="@+id/sunclosetime"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"/>


                    </LinearLayout>

                </LinearLayout>



                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="#70ffffff"/>


            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:gravity="left"
                        android:layout_height="wrap_content">


                    <Button
                            android:text="Drop Message"
                            android:id="@+id/btnMessage"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/bg_button_leftattached"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"/>



                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:gravity="right"
                        android:layout_height="wrap_content">

                    <Button
                            android:text="Get Appointment"
                            android:id="@+id/btnGetAppointment"
                            android:background="@drawable/bg_button_rightattached"
                            android:layout_width="150dp"
                            android:layout_marginBottom="20dp"
                            android:layout_height="wrap_content"/>
                    <Button
                            android:text="Close"
                            android:id="@+id/btnCloseDocView"
                            android:background="@drawable/bg_button_rightattached"
                            android:layout_width="150dp"
                            android:layout_marginBottom="10dp"
                            android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>
            <ProgressBar
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/progressBar"/>

        </LinearLayout>

    </LinearLayout>


</ScrollView>