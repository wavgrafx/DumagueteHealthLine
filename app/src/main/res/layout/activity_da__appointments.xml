<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DA_Appointments">
    <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/bg_gradient_theme"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">
        <TextView
                android:text="Select Appointment Date"
                android:textAlignment="center"
                android:textSize="19sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TextView
                android:hint="Select a date"
                android:id="@+id/appoint_dayOfWeek"
                android:textSize="18sp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_centered_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <Button
                android:text="View Appointment"
                android:id="@+id/btn_ViewAppointDate"
                android:background="@drawable/bg_button_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>