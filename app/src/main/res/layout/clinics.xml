<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content">



    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:elevation="2dp"
            android:background="@drawable/book"
            android:layout_height="match_parent">


        <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/openclinicUpdate"
                android:layout_width="match_parent"
                android:background="@drawable/drshade"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:layout_width="80dp"
                    android:orientation="vertical"
                    android:layout_height="80dp">

                <ImageView
                        android:id="@+id/malefemaleavatar"
                        android:layout_width="match_parent"
                        android:src="@drawable/male_avatar"
                        android:layout_margin="5dp"
                        android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    android:layout_height="wrap_content">


                <TextView
                        android:id="@+id/textViewMedPractice"
                        android:layout_width="wrap_content"
                        android:text="Medical Practive"
                        android:padding="5dp"
                        android:textSize="18sp"
                        android:layout_gravity="right"
                        android:background="@drawable/boxdesign_black"
                        android:textColor="@color/colorWhite"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/textViewName"
                        android:layout_width="match_parent"
                        android:text="Name"
                        android:textStyle="bold"
                        android:textSize="19sp"
                        android:textColor="@color/colorWhite"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/textViewClinicAddress"
                        android:layout_width="match_parent"
                        android:text="Clinic Address"
                        android:textSize="14sp"
                        android:textColor="@color/colorWhite"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/textView_ContNum"
                        android:text="@string/_0000000000"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


            </LinearLayout>

        </LinearLayout>






        <TextView
                android:layout_width="match_parent"
                android:text="AVAILABILITY"
                android:textSize="15sp"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"/>


        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:paddingTop="5dp"
                android:gravity="center"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="40dp"
                    android:text="MON"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/availMON"
                    android:background="@drawable/minibox"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_margin="2dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_width="40dp"
                    android:text="TUE"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/availTUE"
                    android:background="@drawable/minibox"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_margin="2dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_width="40dp"
                    android:text="WED"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/availWED"
                    android:background="@drawable/minibox"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_margin="2dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_width="40dp"
                    android:text="THU"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/availTHU"
                    android:background="@drawable/minibox"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_margin="2dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_width="40dp"
                    android:text="FRI"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/availFRI"
                    android:background="@drawable/minibox"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_margin="2dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_width="40dp"
                    android:text="SAT"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/availSAT"
                    android:background="@drawable/minibox"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_margin="2dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_width="40dp"
                    android:text="SUN"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/availSUN"
                    android:background="@drawable/minibox"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_margin="2dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"/>



        </LinearLayout>



    </LinearLayout>

    <LinearLayout
            android:layout_width="220dp"
            android:elevation="2dp"
            android:background="@drawable/carddesign"
            android:layout_marginBottom="5dp"
            android:layout_height="20dp">
        <TextView
                android:id="@+id/docName"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


    </LinearLayout>




</LinearLayout>
