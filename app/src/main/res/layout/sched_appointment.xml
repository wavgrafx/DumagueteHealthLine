<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/viewpoint_OpenViewQueue"
        android:layout_margin="10dp"
        android:elevation="5dp"
        android:background="@color/colorDHL"
        android:layout_height="wrap_content">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Appointment Details"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:text="@string/clinic_arrive_notice"
                    android:textAlignment="center"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:textStyle="italic"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="Full Name of Doctor"
                        android:id="@+id/viewpoint_doctor"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="Name of Specialty"
                        android:id="@+id/viewpoint_specialty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="Address Line"
                        android:id="@+id/viewpoint_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>



            <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/datetimeshader"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:background="@color/colorMint"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="Date"
                        android:textSize="23sp"
                        android:id="@+id/viewpoint_appointdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:text="TIme"
                        android:textSize="20sp"
                        android:id="@+id/viewpoint_appointtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>


            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="PATIENT:"
                        android:layout_marginRight="5dp"
                        android:textSize="17sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:text="Full Name of Patient"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:id="@+id/viewpoint_patientname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="SEX:"
                        android:layout_marginRight="5dp"
                        android:textSize="17sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:text="Male/Female"
                        android:textSize="17sp"
                        android:id="@+id/viewpoint_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="BIRTHDAY:"
                        android:layout_marginRight="5dp"
                        android:textSize="17sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:text="1/1/1980"
                        android:textSize="17sp"
                        android:id="@+id/viewpoint_bday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>



            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:background="@drawable/bg_appoint_status"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="STATUS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:text="2000.01.01"
                        android:id="@+id/viewpoint_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

</LinearLayout>