<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gradient_theme"
        tools:context=".ViewQueue">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="DOCTOR NAME"
                android:textAlignment="center"
                android:id="@+id/viewqueue_DoctorName"
                android:textSize="22dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TextView
                android:text="SPECIALTY"
                android:textAlignment="center"
                android:textSize="18dp"
                android:id="@+id/viewqueue_Specialty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TextView
                android:text="DATE OF APPOINTMENT"
                android:textAlignment="center"
                android:textSize="15dp"
                android:id="@+id/viewqueue_Date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>




        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#70ffffff"/>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/viewqueue_recyclerview"
                android:layout_margin="10dp"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>



    </LinearLayout>


</LinearLayout>